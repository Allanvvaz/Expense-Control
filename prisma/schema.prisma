model Pessoa {
  id        Int         @id @default(autoincrement()) 
  nome      String
  idade     Int
  createdAt DateTime    @default(now())

  transacoes Transacao[] 
}

model Transacao {
  id        Int   @id @default(autoincrement())
  descricao String
  valor     Float
  tipo      Tipo  
  pessoaId  Int
  pessoa    Pessoa   @relation(fields: [pessoaId], references: [id], onDelete: Cascade)
}
enum Tipo {
  DESPESA
  RECEITA
}
